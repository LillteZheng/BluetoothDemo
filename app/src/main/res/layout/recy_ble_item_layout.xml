<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/cardview_light_background"
    android:layout_marginBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_ble_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="14sp"
        android:textColor="#03A9F4"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/item_ble_mac_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_ble_name_tv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:textColor="#009688"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/item_ble_device_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_ble_mac_tv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/item_ble_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_ble_device_tv"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>